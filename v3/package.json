{
  "name": "smartbroker-v3",
  "version": "3.0.0",
  "description": "SmartBroker v3 - Terminal-based company research tool using Claude and Perplexity",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "server": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "server:install": "cd server && npm install",
    "convert-csv": "node csv-to-json.js",
    "dev": "concurrently \"npm run server:dev\" \"npm start\"",
    "setup": "npm install && npm run server:install"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}